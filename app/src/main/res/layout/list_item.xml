<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:orientation="horizontal"
    android:background="#409370DB">

    <ImageView
        android:id="@+id/gesture_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:contentDescription="@string/gesture_image"
        android:background="#009370DB"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:layout_weight="2"
        />

    <ImageButton
        android:id="@+id/img_button"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:adjustViewBounds="true"
        android:contentDescription="@string/img_button"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:background="#009370DB"
        android:src="@drawable/xbutton" />

</LinearLayout>
